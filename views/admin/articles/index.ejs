<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<main class="container">
  <section class="card fade-up">
    <header class="card-header flex justify-between items-center">
      <h2>Artigos</h2>
      <a class="btn ghost" href="/articles/new">Criar novo artigo</a>
    </header>

    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Slug</th>
            <th>Categoria</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach(article => { %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.slug %></td>
            <td><%= article.category ? article.category.title : '—' %></td>
            <td class="flex gap-2">
              <a class="btn" href="/articles/<%= article.slug %>" target="_blank" rel="noopener">Ver</a>
              <form method="POST" action="/articles/delete" class='form-delete' data-confirm-message="Deseja realmente deletar este artigo?">
                <input type="hidden" name="id" value="<%= article.id %>">
                <button class="btn ghost">Deletar</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
  <div id="toast" class="toast" hidden></div>
</main>

<%- include ('../../partials/footer.ejs') %>

