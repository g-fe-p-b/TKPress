<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<main class="container">
  <section class="card fade-up">
    <header class="card-header flex justify-between items-center">
      <h2>Categorias</h2>
      <a class="btn ghost" href="/admin/categories/new">Criar nova categoria</a>
    </header>

    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Slug</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(category => { %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
            <td><%= category.slug %></td>
            <td class="flex gap-2">
              <a href="/categories/edit/<%= category.id %>" class="btn warning">Editar</a>
              <form method="POST" action="/categories/delete" onsubmit="confirmDelete(event,this)">
                <input type="hidden" name="id" value="<%= category.id %>">
                <button class="btn danger">Deletar</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
</main>

<%- include ('../../partials/footer.ejs') %>

<script>
function confirmDelete(event, form){
  event.preventDefault();
  if(confirm("Deseja realmente deletar esta categoria?")){
    form.submit()
  }
}
</script>
